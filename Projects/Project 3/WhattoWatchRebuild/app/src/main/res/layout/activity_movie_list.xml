<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mattdickeydesign.whattowatch.MovieListActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="GENRE TITLE"
        android:id="@+id/chosenGenreTextView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Based on your selection, we found these movies for you to watch"
        android:id="@+id/genreDescription"
        android:textAlignment="center"
        android:layout_below="@+id/chosenGenreTextView"
        android:layout_marginTop="8dp" />



    <RelativeLayout
        android:id="@+id/movie1Summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/genreDescription"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:onClick="openIMDBPage">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:id="@+id/movie1Poster"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:id="@+id/movie1Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Movie 1 Title"
            android:layout_alignTop="@+id/movie1Poster"
            android:layout_toRightOf="@+id/movie1Poster"
            android:layout_toEndOf="@+id/movie1Poster"
            android:textColor="#000"
            android:paddingStart="8dp"
            android:paddingLeft="8dp"/>

        <TextView
            android:id="@+id/movie1Year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="(0000)"
            android:layout_alignTop="@+id/movie1Title"
            android:layout_toRightOf="@+id/movie1Title"
            android:layout_toEndOf="@+id/movie1Title"
            android:phoneNumber="true"
            android:paddingStart="8dp"
            android:paddingLeft="8dp"/>

        <TextView
            android:id="@+id/movie1Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="movie 1 description"
            android:layout_alignLeft="@+id/movie1Title"
            android:layout_alignStart="@+id/movie1Title"
            android:paddingStart="8dp"
            android:paddingLeft="8dp"
            android:textSize="11dp"
            android:paddingTop="0dp"
            android:layout_below="@+id/movie1Title" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/movie2Summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movie1Summary"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:onClick="showDetails">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:id="@+id/movie2Poster"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/movie2Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Movie 2 Title"
            android:layout_alignTop="@+id/movie2Poster"
            android:layout_toRightOf="@+id/movie2Poster"
            android:layout_toEndOf="@+id/movie2Poster"
            android:textColor="#000"
            android:paddingStart="8dp"
            android:paddingLeft="8dp" />

        <TextView
            android:id="@+id/movie2Year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="(0000)"
            android:layout_alignTop="@+id/movie2Title"
            android:layout_toRightOf="@+id/movie2Title"
            android:layout_toEndOf="@+id/movie2Title"
            android:phoneNumber="true"
            android:paddingStart="8dp"
            android:paddingLeft="8dp" />

        <TextView
            android:id="@+id/movie2Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="movie 2 description"
            android:layout_alignLeft="@+id/movie2Title"
            android:layout_alignStart="@+id/movie2Title"
            android:paddingStart="8dp"
            android:paddingLeft="8dp"
            android:textSize="11dp"
            android:paddingTop="0dp"
            android:layout_below="@+id/movie2Title" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/movie3Summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movie2Summary"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:onClick="showDetails">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:id="@+id/movie3Poster"
