            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Movie 3 Title"
            android:layout_alignTop="@+id/movie3Poster"
            android:layout_toRightOf="@+id/movie3Poster"
            android:layout_toEndOf="@+id/movie3Poster"
            android:textColor="#000"
            android:paddingStart="8dp"
            android:paddingLeft="8dp" />

        <TextView
            android:id="@+id/movie3Year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="(0000)"
            android:layout_alignTop="@+id/movie3Title"
            android:layout_toRightOf="@+id/movie3Title"
            android:layout_toEndOf="@+id/movie3Title"
            android:phoneNumber="true"
            android:paddingStart="8dp"
            android:paddingLeft="8dp" />

        <TextView
            android:id="@+id/movie3Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="movie 3 description"
            android:layout_alignLeft="@+id/movie3Title"
            android:layout_alignStart="@+id/movie3Title"
            android:paddingStart="8dp"
            android:paddingLeft="8dp"
            android:textSize="11dp"
            android:paddingTop="0dp"
            android:layout_below="@+id/movie3Title" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/movie4Summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movie3Summary"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:onClick="showDetails">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:id="@+id/movie4Poster"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/movie4Title"
